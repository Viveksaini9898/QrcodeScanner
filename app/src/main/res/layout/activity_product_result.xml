<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ProductResultActivity">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/curve"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@drawable/big_background"
            android:orientation="vertical" />

        <RelativeLayout
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:elevation="@dimen/dimen_8dp"
                    app:cardCornerRadius="@dimen/dimen_10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_10dp">

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_30dp"
                            android:autoLink="phone"
                            android:gravity="center"
                            android:padding="@dimen/dimen_10dp"
                            android:text="@string/app_name"
                            android:textColor="@color/app_default_light"
                            android:textSize="@dimen/dimen_18dp" />


                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:layout_marginTop="@dimen/dimen_30dp"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/shareLayout"
                                    android:layout_width="@dimen/dimen_70dp"
                                    android:layout_height="wrap_content"
                                    android:background="?selectableItemBackground"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dimen_10dp">

                                    <ImageView
                                        android:layout_width="@dimen/dimen_50dp"
                                        android:layout_height="@dimen/dimen_50dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/circle_button_background"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/ic_share"
                                        app:tint="@color/app_default" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dimen_10dp"
                                        android:gravity="center"
                                        android:text="@string/menu_share" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/copyLayout"
                                    android:layout_width="@dimen/dimen_70dp"
                                    android:layout_height="wrap_content"
                                    android:background="?selectableItemBackground"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dimen_10dp">

                                    <ImageView
                                        android:layout_width="@dimen/dimen_50dp"
                                        android:layout_height="@dimen/dimen_50dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/circle_button_background"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/ic_copy"
                                        app:tint="@color/app_default" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dimen_10dp"
                                        android:gravity="center"
                                        android:text="@string/copy" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/googleLayout"
                                    android:layout_width="@dimen/dimen_70dp"
                                    android:layout_height="wrap_content"
                                    android:background="?selectableItemBackground"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dimen_10dp">

                                    <ImageView
                                        android:layout_width="@dimen/dimen_50dp"
                                        android:layout_height="@dimen/dimen_50dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/circle_button_background"
                                        android:scaleType="fitCenter"
                                        android:padding="@dimen/dimen_10dp"
                                        android:src="@drawable/ic_google"
                                         />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dimen_10dp"
                                        android:gravity="center"
                                        android:text="@string/google" />
                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/flipkartLayout"
                                    android:layout_width="@dimen/dimen_70dp"
                                    android:layout_height="wrap_content"
                                    android:background="?selectableItemBackground"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dimen_10dp">

                                    <ImageView
                                        android:layout_width="@dimen/dimen_50dp"
                                        android:layout_height="@dimen/dimen_50dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/circle_button_background"
                                        android:scaleType="fitCenter"
                                        android:padding="13dp"
                                        android:src="@drawable/ic_flipkart"
                                         />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dimen_10dp"
                                        android:gravity="center"
                                        android:text="@string/flipkart" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/amazonLayout"
                                    android:layout_width="@dimen/dimen_70dp"
                                    android:layout_height="wrap_content"
                                    android:background="?selectableItemBackground"
                                    android:orientation="vertical"
                                    android:paddingTop="@dimen/dimen_10dp"
                                    android:paddingBottom="@dimen/dimen_10dp"
                                    >

                                    <ImageView
                                        android:layout_width="@dimen/dimen_50dp"
                                        android:layout_height="@dimen/dimen_50dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/circle_button_background"
                                        android:scaleType="fitCenter"
                                        android:padding="@dimen/dimen_10dp"
                                        android:src="@drawable/ic_amazon"
                                         />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dimen_10dp"
                                        android:gravity="center"
                                        android:text="@string/amazon" />
                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/ebayLayout"
                                    android:layout_width="@dimen/dimen_70dp"
                                    android:layout_height="wrap_content"
                                    android:background="?selectableItemBackground"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dimen_10dp">

                                    <ImageView
                                        android:layout_width="@dimen/dimen_50dp"
                                        android:layout_height="@dimen/dimen_50dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/circle_button_background"
                                        android:scaleType="fitCenter"
                                        android:padding="@dimen/dimen_10dp"
                                        android:src="@drawable/ic_ebay"
                                         />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dimen_10dp"
                                        android:gravity="center"
                                        android:text="@string/ebay" />
                                </LinearLayout>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <ImageView
                android:id="@+id/topImage"
                android:layout_width="50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_background"
                android:padding="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_barcode" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewQrCode"
            android:layout_width="@dimen/dimen_200dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_below="@+id/rv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:background="@drawable/button_background"
            android:elevation="@dimen/dimen_8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/dimen_20dp"
                android:src="@drawable/ic_qr_code_2_black_24dp"
                app:tint="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/dimen_20dp"
                android:text="View Barcode"
                android:textSize="@dimen/dimen_18dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>