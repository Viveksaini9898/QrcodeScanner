<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".resultfragment.WifiResultFragment">


    <LinearLayout
        android:id="@+id/curve"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/big_background"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:elevation="@dimen/dimen_8dp"
                app:cardCornerRadius="@dimen/dimen_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_30dp"
                        android:padding="@dimen/dimen_10dp">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_call_black_24dp"
                            android:visibility="gone"
                            app:tint="@color/app_default_light" />

                        <TextView
                            android:id="@+id/tvNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/image"
                            android:autoLink="phone|web"
                            android:paddingStart="@dimen/dimen_10dp"
                            android:text="@string/app_name"
                            android:textColor="@color/app_default_light"
                            android:textSize="@dimen/dimen_18dp" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tvBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:gravity="center"
                        android:paddingStart="@dimen/dimen_5dp"
                        android:paddingEnd="@dimen/dimen_5dp"
                        android:text="@string/body"
                        android:textSize="@dimen/dimen_16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_30dp"
                        android:paddingTop="@dimen/dimen_5dp"
                        android:paddingBottom="@dimen/dimen_5dp">

                        <LinearLayout
                            android:id="@+id/shareLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?selectableItemBackground"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <ImageView
                                android:layout_width="@dimen/dimen_50dp"
                                android:layout_height="@dimen/dimen_50dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_button_background"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/ic_share"
                                app:tint="@color/app_default" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10dp"
                                android:gravity="center"
                                android:text="@string/menu_share"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/copyLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?selectableItemBackground"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <ImageView
                                android:layout_width="@dimen/dimen_50dp"
                                android:layout_height="@dimen/dimen_50dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_button_background"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/ic_copy"
                                app:tint="@color/app_default" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10dp"
                                android:gravity="center"
                                android:text="@string/copy"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sendLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?selectableItemBackground"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <ImageView
                                android:layout_width="@dimen/dimen_50dp"
                                android:layout_height="@dimen/dimen_50dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_button_background"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/ic_sms_black_24dp"
                                app:tint="@color/app_default" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10dp"
                                android:gravity="center"
                                android:text="@string/send"
                                android:textSize="14dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <ImageView
            android:id="@+id/topImage"
            android:layout_width="50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_background"
            android:padding="@dimen/dimen_10dp"
            app:srcCompat="@drawable/ic_sms_black_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/viewQrcode"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_below="@+id/rv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:background="@drawable/button_background"
        android:elevation="@dimen/dimen_8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dimen_20dp"
            app:srcCompat="@drawable/ic_qr_code_2_black_24dp"
            app:tint="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingEnd="@dimen/dimen_20dp"
            android:text="@string/view_qrcode"
            android:textSize="@dimen/dimen_18dp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>